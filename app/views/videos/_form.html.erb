<%= form_for @video, :html=>{ multipart: true } do |f| %>
  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="input-group">
    <%= f.label :tag_list, "Tags: " %>
    <%= f.text_field :tag_list, class: 'form-control' %>
  </div>
  <div class="input-group">
    <%= f.label :video_id, "Youtube video link(ex: https://www.youtube.com/watch?v=p2mYGw0Juv0)" %>
    <%= f.text_field :video_id, class: 'form-control' %>
  </div>
  <div class="input-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 10 %>
  </div>
  <% if permission? %>
  <%= f.hidden_field :attachment_id, class: 'form-control' %>
  <div class="input-group">
    <%= f.file_field :video %>
  </div>
  <div class="progress-wrapper">
    <p>Bitrate: <span class="bitrate"></span></p>
    <div class="progress">
      <div class="progress-bar" role="progressbar">
        0%
      </div>
    </div>
  </div>
  <% end %>
  <div class="input-group">
    <%= f.submit :'Submit', class: 'btn btn-submit btn-success' %>
  </div>
<% end %>
